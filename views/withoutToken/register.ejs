<div class="container mt-5 pt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 width:100%">
      <!--  -->
      <h1 class="text-dark fw-bold text-center">ðŸ¤–Action Store Register</h1>
      <!--  -->
      <!--  -->
      <!-- for alert -->
      <!-- Add the alertContainer div inside the body -->
      <div id="alertContainer"></div>
      <!--  -->
      <div class="bg-white shadow rounded p-3 input-group-lg">
        <form action="#">
          <!-- username -->
          <div class="form-group">
            <label for="username">Username</label>
            <input
              type="text"
              class="form-control"
              id="registerUsername"
              required
            />
          </div>
          <!-- password -->
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              class="form-control"
              id="registerPassword"
              required
            />
          </div>
          <!--  -->
        </form>

        <!--form ends  -->
      </div>
      <!-- form Button -->
      <div class="mt-3">
        <button
          class="btn btn-secondary w-100"
          id="registerButton"
          onclick="onRegisterButton()"
        >
          Submit
        </button>
      </div>
      <!-- form submit button ends-->
      <hr />

      <p class="text-dark text-center">Alredy registered? then login</p>

      <!--login page  button from register page -->
      <div class="mt-3 text-center">
        <button class="btn btn-success w-50" onclick="onButtontoLoginPage()">
