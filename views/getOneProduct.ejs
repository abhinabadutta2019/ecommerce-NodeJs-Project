<%- include('./partials/userHeader') %>

<h3><%= product.title%> details</h3>

<div>
  <li>title:<%= product.title%></li>
  <li>price:<%= product.price%></li>
  <br />
  <!--  -->
  <br />
  <!--  -->
  <% if (product.imagePath != null) { %>

  <img src="<%= product.imagePath %>" alt="image" width="200" height="150" />

  <% } %>
  <br />
  <div>
    <!--  -->

    <p>this item count in cart : <%= getCountInCart%></p>

    <!--  -->
    <% if ( product.productLeft > 0) { %>
    <!--  -->
    <!--  -->
    <label for="count">mention count</label>
    <br />
    <input type="number" id="itemCountID" required />
    <br />
    <!--  -->
    <button id="addToCartId" onclick="addToCartButton('<%= product._id%>')">
      add to cart
    </button>
    <button
      id="removeFromCartId"
      onclick="removeFromCartFunc('<%= product._id%>')"
    >
      remove from cart
    </button>
    <!--  -->
    <% } else{%>
    <p>cant buy, product ot of stock</p>
    <%}%>

    <br />
  </div>
</div>

<script>
  //
  async function removeFromCartFunc(productId) {
    //
    try {
      const quantity = document.getElementById("itemCountID").value;
      //
      const data = { quantity: quantity };
      //
      const response = await fetch(
        `${window.location.origin}/cart/removeFromCart/${productId}`,
        {
          method: "PUT",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(data),
        }
      );
      //
      //
      const result = await response.json();
      console.log(result, "result");
    } catch (err) {
      console.log(err);
    }
  }
  //
  //
  async function addToCartButton(productId) {
    //

    const quantity = document.getElementById("itemCountID").value;
    //
    const data = { quantity: quantity };

    const response = await fetch(
      `${window.location.origin}/cart/addToCart/${productId}`,
      {
        method: "PUT",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      }
    );

    //
    const result = await response.json();

    console.log(result, "result");
  }
</script>
